<odoo>
    <record id="view_player_form" model="ir.ui.view">
        <field name="name">wow.player.form</field>
        <field name="model">wow.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nickname"/>
                            <field name="region"/>
                            <field name="account_id"/>
                            <field name="score"/>
                        </group>
                        <group>
                            <field name="max_aircraft_damage"/>
                            <field name="max_ground_objects_damage"/>
                            <field name="wins"/>
                            <field name="losses"/>


                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>